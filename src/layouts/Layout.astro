---
import '../styles/reset.css';
import '../styles/global.css';
---

<div class="layout">
  <slot />
</div>

<style is:global>
  .layout {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 100vh;
    max-width: 1440px;
    width: 100%;
    margin-inline: auto;
  }
  h1,
  h2,
  h4,
  h5,
  h6 {
    font-family: 'Roboto Serif';
  }

  .main-title {
    margin-bottom: 4rem;
    text-align: center;
    color: var(--color-primary);
    font-weight: 700;
    font-size: 34px;
  }

  @media screen and (min-width: 700px) {
    .main-title {
      font-size: 48px;
      margin-bottom: 4rem;
    }
  }

  a:focus {
    outline: 1px dashed var(--color-primary);
    border-radius: 0.2rem;
  }
</style>
