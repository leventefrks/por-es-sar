---
const features = [
  {
    name: 'idézet',
    icon: 'quote-left',
    number: 80,
  },
  {
    name: 'helyszín',
    icon: 'location',
    number: 40,
  },
  {
    name: 'kép',
    icon: 'camera',
    number: 24,
  },
];
---

<section class="features">
  <h2 class="main-title">Több mint egy füzet</h2>
  <ul class="items">
    {
      features.map(feature => {
        return (
          <li class="feature">
            <img
              src={`/${feature.icon}.svg`}
              class="icon"
              alt={feature.name}
              width="33"
              height="45"
            />
            <h3 class="title">{feature.number}</h3>
            <h4 class="sub-title">{feature.name}</h4>
          </li>
        );
      })
    }
  </ul>
</section>

<style lang="scss">
  .features {
    max-width: 1210px;
    min-width: 100%;
    padding: 2rem;
    margin: 0 auto;

    .items {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      align-items: center;

      .feature {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 1rem;
        gap: 5px;
        border-radius: 10px;
        background-color: var(--color-primary);
        box-shadow: var(--shadow);
        cursor: auto;
        user-select: none;
        isolation: isolate;
        transition: transform 150ms ease-in;

        &:before {
          content: '';
          position: absolute;
          width: 100%;
          height: 100%;
          background-color: var(--color-primary);
          opacity: 0.65;
          border-radius: inherit;
          z-index: -1;
        }

        &:hover {
          transform: scale(1.05);
        }

        &:first-of-type {
          background: url('/feature-iparmuveszeti-muzeum.jpg');
          background-size: cover;
        }

        &:nth-of-type(2) {
          background: url('/feature-bazilika.jpg');
          background-size: cover;
        }

        &:last-of-type {
          background-image: url('/feature-lanchid.jpg');
          background-size: cover;
        }

        .icon {
          margin: 0 auto;
        }

        .title {
          color: #fff;
          font-size: 60px;
          line-height: 1;
          font-family: var(--font-family-secondary);
        }

        .sub-title {
          color: #fff;
          font-size: 24px;
          font-family: var(--font-family-secondary);
          font-weight: 400;
        }
      }
    }
  }

  @media screen and (min-width: 1000px) {
    .features {
      padding: 2rem 7rem;

      .items {
        grid-template-columns: repeat(3, 300px);
        grid-auto-flow: column;
        justify-content: space-between;
      }
    }
  }
</style>
