---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="header">
  <nav>
    <h1 class="brand-logo">
      <a href="/">Por és sár</a>
    </h1>
    <ul>
      <li>
        <a class={currentPath === '' && 'active'} href="/">Főoldal</a>
      </li>
      <li>
        <a class={currentPath === 'setak' && 'active'} href="/setak"> Séták</a>
      </li>
      <li>
        <a class={currentPath === 'media' && 'active'} href="/media"> Média</a>
      </li>
      <li>
        <a class={currentPath === 'rolam' && 'active'} href="/rolam">Rólam</a>
      </li>
      <li>
        <a class={currentPath === 'kapcsolat' && 'active'} href="/kapcsolat">
          Kapcsolat
        </a>
      </li>
    </ul>
  </nav>
</header>

<style lang="scss">
  .header {
    position: fixed;
    width: 100%;
    display: flex;
    background-color: #fff;
    opacity: 0.9;
    isolation: isolate;
    z-index: 1;
    height: 80px;
    overflow: hidden;
    padding: 1rem 60px;

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
    }

    .brand-logo {
      a {
        font-family: var(--font-family-primary);
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--color-primary);
        text-decoration: none;
        transition: border linear 0.15s;
      }
    }

    ul {
      display: flex;
      gap: 2rem;

      li {
        a {
          text-decoration: none;
          font-size: 1.2rem;
          padding: 0.2rem 0.5rem;
          color: var(--color-primary);
          font-family: var(--font-family-secondary);
        }
      }
    }

    .active {
      text-decoration: underline;
    }
  }
</style>
