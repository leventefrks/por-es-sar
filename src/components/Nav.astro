---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="header">
  <nav>
    <h1>
      <a href="/">Por és sár</a>
    </h1>
    <ul>
      <li>
        <a class={currentPath === '' ? 'active' : ''} href="/"> Főoldal</a>
      </li>
      <li>
        <a class={currentPath === 'rolam' ? 'active' : ''} href="/rolam">
          Rólam
        </a>
      </li>
      <li>
        <a class={currentPath === 'media' ? 'active' : ''} href="/media">
          Média
        </a>
      </li>
      <li>
        <a
          class={currentPath === 'varosnezes' ? 'active' : ''}
          href="/varosnezes"
        >
          Városnézés
        </a>
      </li>
      <li>
        <a
          class={currentPath === 'kapcsolat' ? 'active' : ''}
          href="/kapcsolat"
        >
          Kapcsolat
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    width: 100%;
    display: flex;
    background-color: #fff;
    opacity: 0.9;
    isolation: isolate;
    z-index: 1;
    padding: 1rem 2rem;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100vw;
    font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  h1 > a {
    font-family: 'Roboto Serif';
    font-size: 2rem;
    color: #000;
    text-decoration: none;
    transition: border linear 0.15s;
  }

  h1 > a:hover {
    border-bottom: 2px solid #000;
  }

  ul {
    display: flex;
    gap: 2rem;
  }

  ul a {
    text-decoration: none;
    font-size: 1.2rem;
    padding: 0.2rem 0.5rem;
    opacity: 0.72;
    transition: text-shadow 0.25s ease-in opacity linear 0.15s;
  }

  .active {
    opacity: 1;
    text-shadow: 0 0 0.85px #d88518, 0 0 0.85px #d88518;
    color: #d88518;
  }

  ul a:hover,
  ul a:focsus {
    opacity: 1;
  }
</style>
