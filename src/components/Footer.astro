---
import facebook from '../images/facebook.svg';
import instagram from '../images/instagram.svg';

const facebookUrl = 'https://www.facebook.com/poressar/';
const instagramUrl = 'https://www.instagram.com/poressar/';
---

<footer>
  <div>
    <h3>Por és sár</h3>
    <p>Copyright © 2022 - Por és sár</p>
  </div>
  <ul class="social-icons">
    <li class="icon">
      <a href={facebookUrl} target="_blank" rel="noopener noreferrer">
        <img
          src={facebook}
          alt="facebook"
          title="facebook"
          width="32"
          height="32"
        />
      </a>
    </li>
    <li class="icon">
      <a href={instagramUrl} target="_blank" rel="noopener noreferrer">
        <img
          src={instagram}
          alt="instagram"
          title="instagram"
          width="32"
          height="32"
        />
      </a>
    </li>
  </ul>
</footer>

<style>
  footer {
    position: relative;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    justify-content: space-between;
    width: 100vw;
    background-color: #f2f2f2;
  }

  @media (min-width: 700px) {
    footer {
      flex-direction: row;
      padding: 2rem 4rem 1rem;
    }
  }

  h3 {
    font-family: 'Roboto serif';
    font-size: 1.2rem;
  }

  .social-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
    flex-shrink: 0;
    transition: transform 0.25s ease-in;
  }

  .icon:hover {
    transform: scale(1.2);
  }

  img {
    border-radius: 5px;
  }
</style>
