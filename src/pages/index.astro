---
import { Seo } from 'astro-seo-meta';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Introduction from '../components/Introduction.astro';
import Testimonials from '../components/Testimonials.vue';
import Purchase from '../components/Purchase.astro';
import ScrollTop from '../components/ScrollTop.vue';
---

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <Seo
    title="por és sár"
    description="My fast astro website"
    keywords={[
      'por és sár',
      'antivárosnéző füzet',
      'antivárosnéző séta',
      'blog',
      'anti blog',
    ]}
    icon="/favicon.ico"
    themeColor="#000000"
    colorScheme="light"
    facebook={{
      image: '/facebook.png',
      url: 'https://www.poressar.hu',
      type: 'website',
    }}
    twitter={{
      image: '/twitter.png',
      site: '@astrodotbuild',
      card: 'summary',
    }}
  />
</head>

<Layout>
  <Hero />
  <Features />
  <Introduction />
  <Testimonials client:idle />
  <Purchase />
  <ScrollTop client:idle />
</Layout>
