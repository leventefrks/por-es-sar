---
import FullPage from '../layouts/FullPage.astro';
---

<FullPage>
  <section class="page-not-found">
    <div class="card">
      <div class="main-text">
        <h1 class="title">404</h1>
        <p class="text">
          Lehet, hogy eltévedtél itt nincs már más csak<br />
          <strong>por és sár</strong>
        </p>
      </div>
    </div>

    <a href="/" class="cta">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        viewBox="0 0 24 24"
      >
        <path d="m15 18-6-6 6-6"></path>
      </svg>
      Vissza
    </a>
  </section>
</FullPage>

<style lang="scss">
  .page-not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 1.25rem;
    margin: 0 auto;
    min-height: 100vh;

    .card {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      position: relative;
      padding: 1rem;
      border-radius: var(--border-radius-normal);
      max-width: 320px;
      width: 100%;
      height: 380px;
      border-radius: var(--border-radius-normal);
      background-blend-mode: overlay;
      background-color: #333;

      &:before {
        position: absolute;
        content: '';
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        border-radius: inherit;
        background: url('/404.jpeg') no-repeat;
        opacity: 0.3;
      }

      .main-text {
        position: relative;
        padding: 1rem;
        text-align: center;
        .title {
          font-size: clamp(3rem, 6rem, 9rem);
          font-family: var(--font-family-primary);
          color: var(--color-icon);
        }
        .text {
          color: #f9f7f5;
          font-size: clamp(1.1rem, 1.2rem, 1.3rem);
          font-family: var(--font-family-secondary);
          strong {
            font-size: clamp(1.3rem, 1.4rem, 1.5rem);
          }
        }
      }
    }

    .cta {
      display: flex;
      gap: 0.5rem;
      align-items: center;
      align-self: center;
      margin-top: 2rem;

      svg {
        width: 20px;
      }
    }
  }
</style>
